<!-- views/home.handlebars -->
{{#if user}}
  <div class="jumbotron">
    <h1>WFE User Authentication</h1>
    <p>Below is your research data!</p>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Profile Information</h3>
    </div>
    <div class="panel-body">
      <p>Username: {{user.username}}</p>
      <p>Avatar: <img src="{{user.avatar}}"/></p>
    </div>
  </div>

{{else}}
  <div class="jumbotron">
    <h1>WFE User Authentication</h1>
    <p>Sign in and view your research data!</p>
    <a href="/signin" class="btn btn-primary btn-lg" role="button">
    <span class="glyphicon glyphicon-user"></span>
    Sign in
    </a>
    <!--<a href="/create/account" class="btn btn-primary btn-lg" role="button">-->
        <!--<span class="glyphicon glyphicon-plus"></span>-->
        <!--Create account-->
    <!--</a>-->
  </div>

{{/if}}

